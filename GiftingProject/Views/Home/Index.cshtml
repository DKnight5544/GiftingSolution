@model GiftingProject.DatabaseAccess.UserModel


<div class="container">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@300&family=Varela+Round&display=swap" rel="stylesheet">

    <div class="stats-panel stats-panel-blue">
        <div class="stats-panel-name">2UPGIFT.CLUB</div>
    </div>

    <div id="DisplayWindow">

    </div>

</div>

@*-- Hidden Section -------------------------------------------------------------------*@

<div style="display:none;">

